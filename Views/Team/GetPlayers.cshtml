        <div id="kt_content_container" class="container-xxl">
            <!--begin::Card-->
            <div class="card">

                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Table-->
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_subscriptions_table">
                        <!--begin::Table head-->
                        <thead>
                            <!--begin::Table row-->
                            <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">

                                <th class="min-w-125px">Image</th>
                                <th class="min-w-125px">Player Name</th>
                                <th class="min-w-125px">Email</th>
                                <th class="min-w-125px">Age</th>
                                <th class="min-w-125px">Is Club Pass Player</th>

                            </tr>
                            <!--end::Table row-->
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="text-gray-600 fw-bold">
                           
                              @foreach(var player in ViewBag.Players) {
                                <tr>
                                    <td> 
                                        <div class='symbol symbol-circle symbol-50px overflow-hidden me-3' >
                                            <div class='symbol-label'>
                                                <img id="coach_img_details" src= "data:image/png;base64,@player.Image" alt="@player.PlayerName">
                                            </div>
                                        </div>
                                    </td>
                                    <td>@player.PlayerName</td>
                                    <td>@player.EmailAddress</td>                                 
                                    <td>@player.Age</td>                                 
                                    <td>@player.IsClubPassPlayer</td>                                 
                                  </tr>
                                }

                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Card body-->
